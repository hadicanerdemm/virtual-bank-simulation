{
    "name": "turkpay/payment-gateway",
    "description": "Professional Virtual Bank and Payment Gateway Simulation",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "TurkPay Developer",
            "email": "developer@turkpay.local"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.6",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "test": "phpunit --testdox",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
