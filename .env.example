# TurkPay Environment Configuration
# Copy this file to .env and update the values

# Application
APP_NAME="TurkPay"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/banka/public
APP_KEY=your-secret-key-here-32-chars

# Database
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=turkpay
DB_USERNAME=root
DB_PASSWORD=

# Session
SESSION_LIFETIME=120
SESSION_SECURE=false

# Security
CSRF_TOKEN_LIFETIME=3600
BCRYPT_COST=12
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=900

# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# Transaction Limits
MAX_SINGLE_TRANSACTION=50000
DAILY_TRANSACTION_LIMIT=200000
ADMIN_APPROVAL_THRESHOLD=50000

# Exchange Rates (Fixed for simulation)
USD_TO_TRY=32.50
EUR_TO_TRY=35.20

# Webhook
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3

# Queue
QUEUE_WORKER_SLEEP=3
QUEUE_MAX_ATTEMPTS=3

# Mail (for notifications)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@turkpay.local
MAIL_FROM_NAME="TurkPay"
